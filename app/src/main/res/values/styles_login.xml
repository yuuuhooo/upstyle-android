<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInputLayout" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/textinputlayout_background_login</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/login_text_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CustomTextInputLayout2" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_post_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#66FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="CustomTextInputLayout3" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_post_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#66FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomGenderSelectButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_background_gender_selector</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/login_text_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="CustomStartButton" parent="Widget.AppCompat.Button">
        <item name="android:textStyle"></item>
        <item name="android:fontFamily">@font/</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GoogleLoginButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_google_login_selector</item>
        <item name="android:textColor">#8A000000</item>
    </style>
</resources>